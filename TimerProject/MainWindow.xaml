<Window x:Name="Window" x:Class="TimerProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimerProject"
        mc:Ignorable="d"
        Title="Timer" Height="240" Width="198">

    <Grid>
        <StackPanel Margin="45,2,0,0" Orientation="Horizontal" Height="138" VerticalAlignment="Top" HorizontalAlignment="Left" Width="99" Grid.RowSpan="2" Grid.ColumnSpan="2">
            <Label Content="00" FontSize="28" x:Name="Minutes"/>
            <Label Content=":" FontSize="28"/>
            <Label Content="00" FontSize="28" x:Name="Seconds"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="50,0,0,0">
            <Button Height="83" Width="93" VerticalAlignment="Bottom" x:Name="PlayAndPause" Click="PlayAndPause_Click">
                <Image Source="/play.png" x:Name="PlayAndPauseImage"/>
            </Button>
            <Button Height="33" Width="29" VerticalAlignment="Bottom" x:Name="Reset" Click="Reset_Click">
                <Image Source="/next.png"/>
            </Button>
        </StackPanel>
    </Grid>
</Window>
